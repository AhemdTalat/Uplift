@model Frequency

@{
    var title = "Create Frequency";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<form asp-action="Upsert" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="border backgroundWhite">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
            title = "Edit Frequency";
        }

        <div class="row">
            <h2 class="text-info">@title</h2>
        </div>

        <br />

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name" class="form-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="FrequencyCount" class="form-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="FrequencyCount" class="form-control" />
                <span asp-validation-for="FrequencyCount" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6 offset-3">
                @if (Model.Id != 0)
                {
                    <partial name="_EditAndBackToListButton" model="Model.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackToListButton" />
                }
            </div>
        </div>


    </div>

</form>